<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.jiaxufei.testdemo.MainActivity">
  <TextView
    android:id="@+id/tvShow"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="请输入幸运数字:"
    app:layout_constraintBaseline_toBaselineOf="@id/et_num"/>
  <EditText
    android:id="@+id/et_num"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:inputType="phone|number"
    android:maxLength="11"
    android:numeric="integer"
    android:singleLine="true"
    app:layout_constraintLeft_toRightOf="@id/tvShow"
    app:layout_constraintRight_toLeftOf="@id/btn_search"/>
  <Button
    android:id="@+id/btn_search"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="搜索"
    app:layout_constraintLeft_toRightOf="@id/et_num"
    app:layout_constraintRight_toRightOf="parent"/>
  <Button
    android:id="@+id/btn_goods"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="商品页"
    app:layout_constraintTop_toBottomOf="@id/tvShow"
    />
  <TextView
    android:id="@+id/tv_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello World!"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
