<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <ImageView
    android:id="@+id/device_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_launcher"/>
  <TextView
    android:id="@+id/device_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:lines="1"
    android:text="蓝牙名称好d"
    android:textColor="@color/common_color_black"
    android:textSize="17sp"
    app:layout_constraintLeft_toRightOf="@id/device_iv"
    app:layout_constraintRight_toLeftOf="@id/device_state"
    />
  <TextView

    android:id="@+id/device_mac"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="蓝牙MAC:df:fd:fdf:dfd"
    android:textSize="12sp"



    app:layout_constraintBottom_toBottomOf="@id/device_iv"
    app:layout_constraintLeft_toRightOf="@id/device_iv"
    app:layout_constraintTop_toBottomOf="@id/device_name"
    />
  <TextView
    android:id="@+id/device_state"
    android:textStyle="bold"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:text="@string/btooth_state"
    android:textColor="@color/common_colorPrimary"
    app:layout_constraintRight_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>